@model IEnumerable<LoginDemoDay64.Models.Nationality>

@{
    ViewData["Title"] = "Index";
}

<h4 class="bg-dark text-info p-3">Show All Nationality Record</h4>

<p>
    <a class="btn btn-warning"  asp-action="Create">Create  New Nationality</a>
</p>
<table class="table table-bordered ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Continent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryPopulation)
            </th>
            <th colspan="3">operations</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Continent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryPopulation)
            </td>
           <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a>  </td>
               <td> <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a>  </td>
               <td> <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
