@model IEnumerable<LoginDemoDay64.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h4 class="bg-dark text-info p-3">Show All Movies Record</h4>
<p>
    <a class="btn btn-warning" asp-action="Create">Create  New Movie</a>
</p>
<table class="table table-bordered ">
    <thead class="bg-warning">
        <tr class="text-center">
             <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget)
            </th>
            <th colspan="3">operations</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
              <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a>  </td>
               <td> <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a>  </td>
               <td> <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
